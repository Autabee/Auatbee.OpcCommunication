@using Autabee.Communication.ManagedOpcClient;
@using Autabee.OpcScout.RazorControl.Browse
@using Opc.Ua;

<div class="OpcBrowser">
@if (clients != null) {
    @foreach (var client in clients)
    {
        <RootScannedNodeItem Browser="nodeBrowser" Client="client" />
    }
}
else{
    <div> No Clients </div>
}
</div>

@code {
    [Parameter]
    public List<OpcUaClientHelperApi> clients { get; set; }
    [Parameter]
    public NodeBrowserModel nodeBrowser { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        
    }
}